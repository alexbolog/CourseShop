@model CourseShop.Admin.Core.Entities.LoginViewModel
    <head>
        <title>CourseShop Admin - Login</title>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </head>
<body>
    <div class="container">
        <div class="row">
            <h3>Course Shop Admin</h3>
        </div>
        <form id="login-form" class="form-inline" action="Account/Login" method="post">
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <input placeholder="Email" type="text" id="email-input" name="Email">
                    <label for="email-input">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <input placeholder="Password" type="password" id="pwd-input" name="Password">
                    <label for="pwd-input">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="col s3 offset-s6">

                    <a class="waves-effect waves-light btn" href="javascript:;" onclick="document.getElementById('login-form').submit();">Login</a>
                </div>
            </div>
        </form>
    </div>

</body>