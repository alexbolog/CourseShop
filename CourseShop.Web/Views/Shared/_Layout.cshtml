<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
    <nav>
        <div class="nav-wrapper cyan darken-4">
            <a href="/Home" class="brand-logo">Home</a>

            @if (User.Identity.IsAuthenticated)
            {
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li>
                        <form id="logout-form" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <a href="javascript:;" onclick="document.getElementById('logout-form').submit();">Logout</a>
                        </form>
                    </li>
                </ul>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="/Home/Manage">Add Courses</a></li>
                </ul>
            }
            else
            {
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="/Identity/Account/Login">Login</a></li>
                </ul>
            }
        </div>
    </nav>
    <div>
        <div class="container">
            @RenderBody()
        </div>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
